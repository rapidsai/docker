{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 4am on the first day of the month"
  ],
  "packageRules": [
    {
      "description": "Update most GitHub actions together",
      "groupName": "gh-actions",
      "matchPackageNames": [
        "/^(actions/.*|aws-actions/*|docker/*|go|peter-evans/dockerhub-description|pre-commit/)$/"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "/^condaforge/miniforge3$/"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": "versions.yaml",
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[^ ]+) depName=(?<depName>[^\\s]+)(?:\\s+versioning=(?<versioning>[^\\n]+))?\\n(?<depNameCapture>[^:]+): (?<currentValue>[^\\n]+)"
      ],
      "depNameTemplate": "{{depName}}",
      "datasourceTemplate": "{{datasource}}",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}
